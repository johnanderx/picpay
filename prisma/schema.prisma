generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  COMMON
  MERCHANT
}

enum Status {
  PENDING
  SUCCESS
  FAILED
}

model User {
  id        String   @id @default(uuid())
  userType  UserType
  fullName  String
  email     String   @unique
  password  String
  cpf       String   @unique
  cnpj      String?  @unique
  wallet    Wallet?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Wallet {
  id               String        @id @default(uuid())
  userId           String        @unique
  user             User          @relation(fields: [userId], references: [id])
  balance          Decimal       @default(0)
  payerTransaction Transaction[] @relation("PayerTransactions")
  payeeTransaction Transaction[] @relation("PayeeTransactions")
}

model Transaction {
  id            String   @id @default(uuid())
  payerWalletId String
  payerWallet   Wallet   @relation("PayerTransactions", fields: [payerWalletId], references: [id])
  payeeWalletId String
  payeeWallet   Wallet   @relation("PayeeTransactions", fields: [payeeWalletId], references: [id])
  status        Status   @default(PENDING)
  createdAt     DateTime @default(now())
}
